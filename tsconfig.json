{
  "compilerOptions": {
    "jsx": "react",
    "inlineSources": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES5",
    "declarationDir": "typings",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*"
  ]
}
